<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        android:gravity="center">
        <shape
            android:shape="oval">
            <size
                android:height="11dp"
                android:width="11dp" />
            <solid android:color="#3888" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:bottom="4dp"
        android:top="4dp"
        android:right="4dp"
        android:left="4dp">
        <shape
            android:shape="oval">
            <size
                android:width="10dp"
                android:height="10dp" />
            <solid android:color="#f8f8f8" />
        </shape>
    </item>

</layer-list>